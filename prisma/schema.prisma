generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "postgresql"
	url      = env("DATABASE_URL")
}

model Product {
	id        Int     @id @default(autoincrement())
	active    Boolean @unique
	productId Int
	sku       String
	ean       String
	name      String
	group     Group[]
}

model Variant {
	id          Int     @id @default(autoincrement())
	active      Boolean
	variantId   Int     @unique
	sku         String
	ean         String
	name        String
	variantName String
	group       Group[]
}

model Group {
	id      Int       @id @default(autoincrement())
	name    String
	product Product[]
	variant Variant[]
}
